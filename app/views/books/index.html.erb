<h1>Books</h1>
<table>
  <thead>
    <tr>
    <th><p>Title</p></th>
    <th><p>Body</p></th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
  <tr>
  <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
  <td><%= link_to "Show" ,book_path(book) %></td>
   <td><%= link_to "Edit" ,edit_book_path(book) %></td>
   <td><%= link_to "Destroy" ,book_path(book),method: :delete %></td>
  </tr>
  <%end%>
  </tbody>
</table>
 <%= form_with model: @book do |f| %>
   <h2>New Book</h2>
   <% if @book.errors.any? %>
    <%= @book.errors.count %>error
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
 <% end %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Body</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book！' %>
<% end %>